<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="#E6E6E6">
	
    <TextView android:id="@+id/date" android:layout_width="75dip"
        android:layout_height="84dip" android:textColor="#000000" android:gravity="center"
        android:text="2011-12-08 08:10:00" android:tag="date"
        />
    <LinearLayout android:layout_toRightOf="@+id/date" android:layout_marginLeft="5dip" android:layout_width="fill_parent" android:layout_height="84dip" android:orientation="vertical"
        >
        <LinearLayout android:layout_marginTop="5dip" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/homeText" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="杜伊斯堡" android:textColor="#000000" android:tag="home"/>
            <TextView android:id="@+id/handicapText" android:layout_width="wrap_content" android:tag="handicap" android:layout_height="wrap_content"
                android:text="(+1)" android:textColor="#ff0000" android:visibility="gone"/>
        </LinearLayout>
        
        <TextView android:id="@+id/awayText" android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textColor="#000000"
            android:text="杜赛尔多夫" android:tag="away"/>
        <RelativeLayout android:orientation="horizontal" android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:text="胜:2.8" android:tag="h"
                android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/h"/>
            <TextView android:text="平:3.6" android:layout_toRightOf="@+id/h" android:layout_marginLeft="5dip" android:tag="d"
                android:textColor="#333333"
                 android:layout_width="wrap_content"  android:layout_height="wrap_content" android:id="@+id/d"/>
            <TextView android:layout_toRightOf="@+id/d" android:text="负:2.05" android:tag="a"
                android:textColor="#333333" android:layout_marginLeft="5dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/a"/>
            <TextView android:text="赛果:0:1" android:tag="result" android:layout_alignParentRight="true" android:layout_marginRight="5dip"
                android:textColor="#333333" android:layout_marginLeft="5dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/result"/>
        </RelativeLayout>
    </LinearLayout>
    
   <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_marginRight="5dip">
       <TextView android:id="@+id/legualText" android:layout_marginTop="5dip" android:text="德乙" android:layout_width="wrap_content" android:layout_height="wrap_content"
           android:textColor="#000000" android:layout_gravity="right" android:tag="legual"
           />
       <TextView android:id="@+id/stutasText" android:layout_marginTop="5dip" android:text="变化奖金中" android:layout_width="wrap_content" android:layout_height="wrap_content"
           android:textColor="#000000" android:tag="status"
           />
   </LinearLayout>
</RelativeLayout>
