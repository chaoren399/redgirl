<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
	android:layout_height="40dip" xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal">
	<TextView android:id="@+id/time_text" android:layout_width="100dip"
		android:layout_height="fill_parent" android:singleLine="true"
		android:gravity="center" style="@style/itemTeamNameStyle" android:background="@drawable/itembg" />
	<TextView android:id="@+id/number_text" android:layout_width="100dip"
		android:layout_height="fill_parent" android:singleLine="true"
		android:gravity="center" style="@style/itemTeamNameStyle" android:background="@drawable/itembg" />
	<TextView android:id="@+id/unit_text" android:layout_width="150dip"
		android:layout_height="fill_parent" android:singleLine="true"
		android:gravity="center" style="@style/itemTeamNameStyle" android:background="@drawable/itembg" />
	<TextView android:id="@+id/host_name_text"
		android:layout_width="100dip" android:layout_height="fill_parent"
		android:singleLine="true" android:gravity="center" style="@style/itemTeamNameStyle"
		android:background="@drawable/itembg" />
	<TextView android:id="@+id/guess_name_text"
		android:layout_width="100dip" android:layout_height="fill_parent"
		android:singleLine="true" android:gravity="center" style="@style/itemTeamNameStyle"
		android:background="@drawable/itembg" />
</LinearLayout>