<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/homeLayout"
        android:layout_width="144dip"
        android:layout_height="36dip"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:id="@+id/type"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:background="@drawable/icon13"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tText"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:layout_marginLeft="1px"
                android:text=""
                android:textSize="11dip"
                android:visibility="gone" />
        </LinearLayout>

        <!--
           <View android:id="@+id/goal" android:layout_marginLeft="27dip" android:layout_width="18dip" android:layout_height="18dip"
          android:visibility="gone" android:background="@drawable/ball5"/>
        -->

        <TextView
            android:id="@+id/playerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dip"
            android:maxWidth="86dip"
            android:singleLine="true"
            android:text="巴拉里斯" />
    </RelativeLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="32dip"
        android:layout_height="36dip"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <RelativeLayout
        android:id="@+id/awayLayout"
        android:layout_width="144dip"
        android:layout_height="36dip"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tText"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:layout_marginRight="1px"
                android:text=""
                android:textSize="11dip"
                android:visibility="gone" />

            <View
                android:id="@+id/type"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:background="@drawable/icon13"
                android:visibility="visible" />
        </LinearLayout>
        <!--
           <View android:layout_marginRight="13dip" android:layout_alignParentRight="true" android:layout_width="12dip" android:layout_height="12dip" android:id="@+id/type"
          android:visibility="visible"
          android:background="@drawable/icon13"/>
        -->
        <!--
           <View android:id="@+id/goal" android:layout_marginRight="27dip" android:layout_width="18dip"
          android:layout_alignParentRight="true" android:layout_height="18dip"
          android:visibility="visible" android:background="@drawable/ball06"/>
        -->

        <TextView
            android:id="@+id/playerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dip"
            android:maxWidth="86dip"
            android:singleLine="true"
            android:text="巴拉里斯" />
    </RelativeLayout>

</RelativeLayout>