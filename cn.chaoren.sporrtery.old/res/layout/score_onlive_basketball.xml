<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bodybg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="fill_parent"
        android:layout_height="83dip"
        android:background="#E9E6E6"
        android:orientation="horizontal"
        android:padding="10dip" >

        <LinearLayout
            android:id="@+id/homeLayout"
            android:layout_width="120dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <View
                android:layout_width="49dip"
                android:layout_height="45dip"
                android:background="@drawable/ball04" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="18dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/awayNameText_title"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="老虎竞技"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/handText"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="(+1)"
                    android:textColor="#ff0000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/commonLayout"
            android:layout_width="80dip"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/legualText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阿联"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/sesseionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周四001"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:10"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/awayLayout"
            android:layout_width="120dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <View
                android:layout_width="49dip"
                android:layout_height="45dip"
                android:background="@drawable/ball03" />

            <TextView
                android:id="@+id/homeNameText_title"
                android:layout_width="wrap_content"
                android:layout_height="18dip"
                android:gravity="center_vertical"
                android:text="萨斯菲尔德"
                android:textColor="#000000" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/statusLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="#565656"
        android:orientation="horizontal"
        android:padding="14dip" >

        <TextView
            android:id="@+id/first"
             android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/first"
            android:text="1-1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/third"
             android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/second"
            android:layout_height="wrap_content"
            android:text="0-1"
            android:textColor="#ffffff" />

        <TextView
            android:layout_toRightOf="@+id/third"
            android:id="@+id/forth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="1-1"
            android:textColor="#ffffff" />
        <TextView
            android:layout_toRightOf="@+id/forth"
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="状态:进行中"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="5dip"
            android:layout_alignParentRight="true"
            android:text="@string/reward"
            android:clickable="true"
            android:onClick="onClick"
            android:textColor="#0FB2DB" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/messageLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="41dip"
             >

            <TextView
                android:id="@+id/currentText"
                android:layout_width="144dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="第一节"
                android:textColor="#ffffff"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="0:1"
                android:textColor="#ff0000"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/remainTimeText"
                android:layout_width="144dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="08:30"
                android:textColor="#ffffff"
                android:textSize="16dip" />
        </RelativeLayout>

      
    </LinearLayout>
 
</LinearLayout>