<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6.0dip"
    android:paddingLeft="6.0dip"
    android:paddingRight="6.0dip"
    android:paddingTop="6.0dip" >

    <LinearLayout
        android:layout_width="0.0px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="6.0"
        android:background="@drawable/cp_selected_ball_bg"
        android:minHeight="36.0dip"
        android:paddingBottom="5.0dip"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:paddingTop="6.0dip" >

        <LinearLayout
            android:id="@+id/home"
            android:layout_width="0.0px"
            android:layout_height="wrap_content"
            android:layout_marginRight="6.0dip"
            android:layout_weight="2.0"
            android:gravity="center" >

            <TextView
                android:id="@+id/home_text"
                style="@style/itemTeamNameStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2.0dip"
                android:singleLine="true"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/draw"
            android:layout_width="0.0px"
            android:layout_height="wrap_content"
            android:layout_marginRight="6.0dip"
            android:layout_weight="1.0"
            android:gravity="center" >

            <TextView
                android:id="@+id/draw_text"
                style="@style/itemTimeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2.0dip"
                android:singleLine="true"
                android:text="@string/draw_txt"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/guest"
            android:layout_width="0.0px"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:gravity="center" >

            <TextView
                style="@style/itemTeamNameStyle"
                android:id="@+id/guest_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2.0dip"
                android:singleLine="true"
                android:textSize="16.0sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0.0px"
        android:layout_height="fill_parent"
        android:layout_weight="1.0" >

        <ImageView
            android:id="@+id/del_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/cp_delete_stake" />
    </RelativeLayout>

</LinearLayout>